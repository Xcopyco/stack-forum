{
  "browserify": {
    "transform": [
      "babelify",
      "yamlify",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@cycle/most-run": "^2.0.0",
    "@most/hold": "^1.3.0",
    "@motorcycle/dom": "^2.0.0",
    "fwitch": "^1.0.1",
    "most": "^0.19.6",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "11.0.1",
    "browserify-incremental": "^3.0.1",
    "envify": "^3.4.0",
    "instant-server": "^2.0.0",
    "yamlify": "^0.1.3"
  },
  "scripts": {
    "style": "stylus client/style.styl -o dist/style.css",
    "live": "find client/*.js -type f | grep -v 'swp' | entr fish -c 'browserifyinc client/main.js --outfile dist/main.js; and echo \"done!\"'",
    "build-prod": "godotenv -f ../global.env,../prod.env browserify client/main.js --outfile dist/main.js",
    "predeploy": "npm run build-prod && cp client/index.html dist/ && cp -r static dist/"
  }
}
