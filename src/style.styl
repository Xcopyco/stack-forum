*
  box-sizing border-box

#main
  margin 20px

ul, li
  padding 0
  margin 0
  list-style none
  display block

ul.panel
  display -ms-flexbox
  -ms-flex-direction column
  -ms-flex-wrap wrap
  display flex
  flex-direction column
  flex-wrap wrap
  height 100vh

  @media (max-width: 500px)
    height auto

li.item
  width 33.3%
  max-width 300px

  @media (max-width: 800px)
    width 50%

  @media (max-width: 500px)
    width 100%

ul.thread
  position relative
  margin 1.8em

li.message
  background #fff
  padding 1em
  border 1px solid rgba(0, 0, 0, 0.150)

  &:first-child
    position relative
     
    -webkit-box-shadow 1px 1px 2px rgba(0, 0, 0, 0.18)
    -moz-box-shadow 1px 1px 2px rgba(0, 0, 0, 0.18)
    box-shadow 1px 1px 2px rgba(0, 0, 0, 0.18)

  &:nth-child(2)
    z-index -1
    position absolute
    top 2px
    left 0
    padding 10px
    font-size 0.7em
    background-color #fff
    border 1px solid rgba(0, 0, 0, 0.150)
  
    -webkit-box-shadow 1px 1px 2px rgba(0, 0, 0, 0.19)
    -moz-box-shadow 1px 1px 2px rgba(0, 0, 0, 0.19)
    box-shadow 1px 1px 2px rgba(0, 0, 0, 0.19)
  
    transform translate(-10px, -10px) rotate(6deg)

  &:nth-child(3)
    z-index -2
    position absolute
    top 1px
    left -2px
  
    -webkit-box-shadow 1px 1px 2px rgba(0, 0, 0, 0.2)
    -moz-box-shadow 1px 1px 2px rgba(0, 0, 0, 0.2)
    box-shadow 1px 1px 2px rgba(0, 0, 0, 0.2)
  
    -webkit-transform rotate(355deg)
    -moz-transform rotate(355deg)
    -o-transform rotate(355deg)
    -ms-transform rotate(355deg)
    transform rotate(355deg)
